<document>
  <listTemplate>
    <banner>
        <title>{{ title }}</title>
    </banner>
    <list>
      
      <section>
        {{# shows }}
        <listItemLockup
            onSelect="Presenter.load('TVShow_SeasonList', '{{ _.pmsId }}', '/library/metadata/{{ id }}', '{{ title }}', true)"
            onSelectHold="modal"
            >
            <title>{{ title }}</title>
          <relatedContent>
            <lockup>
              <img src="{{ thumb.768 }}" />
              <title>{{ title }}</title>
              <description>{{ summary }}</description>
            </lockup>
          </relatedContent>

        </listItemLockup>
        {{/ shows }}
      </section>
      
    </list>
  </listTemplate>
</document>