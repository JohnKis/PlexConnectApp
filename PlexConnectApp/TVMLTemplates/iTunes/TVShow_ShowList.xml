<document>
	<stackTemplate>
		<banner>
			<title>
				<![CDATA[{{ title }}]]>
			</title>
		</banner>
		<collectionList>
			<grid>
				<section>
					{{# shows }}
					<lockup onSelect="Presenter.load('TVShow_SeasonList', '{{ _.pmsId }}', '/library/metadata/{{ id }}', '{{ title }}', true)" onSelectHold="modal">
						{{^ watched}}
						<img src="{{ thumb.445 }}" width="250" height="375" />
						<overlay style="tv-align: right; padding: 0;">
							<badge src="{{ _.imagePath }}/showRibbons/{{ unwatchedCount }}.png" style="tv-position: top-right;" width="86" height="86" />
						</overlay>
						{{/ watched}}
						<title><![CDATA[{{ title }}]]></title>
					</lockup>
					{{/ shows }}
				</section>
			</grid>
		</collectionList>
	</stackTemplate>
</document>