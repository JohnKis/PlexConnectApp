<document>
    <productTemplate>
        <background>
        </background>
        <banner>
            <infoList>
                <info>
                    <ratingCard style="tv-align: right;">
                        <ratingBadge style="tv-rating-style: star-hollow-l;" value=""></ratingBadge>
                    </ratingCard>
                </info>
                
                <info>
                    <header>
                        <title>Directors</title>
                    </header>
                </info>
                <info>
                    <header>
                        <title>Writers</title>
                    </header>
					
                </info>
            </infoList>
            <stack>
                <title>Title</title>
                <subtitle>Subtitle</subtitle>
                <row>
                    <!--text>rating(Video/contentRating)</text-->
                    <text>Duration</text>
                    <text>Genre</text>
                    <text>Year</text>
                    <!--badge src="resource://mpaa-pg" class="badge" /-->
                    <!--badge src="resource://cc" class="badge" /-->
                </row>
                <description allowsZooming="true" moreLabel="more"
                    onSelect="Presenter.loadContext('TVShow_PrePlayDescription', '{{PMSID()}}', '{{PATH()}}')"
                    >
                    <![CDATA[{{VAL(MediaContainer/summary)}}]]>
                </description>
                <!--text>Language information can go here</text-->
                <row>
                    <buttonLockup
                        onSelect=""
                        >
                        <badge src="resource://button-play" />
                        <title>Play</title>
                    </buttonLockup>
                    
                    <buttonLockup
                        id="resume"
                        autoHighlight="true"
                        onSelect="videoPlayer.play('{{PMSID()}}', '{{PATH()}}', 'resume')"
                        >
                        <badge src="" width="58" height="29" />
                        <title>Resume</title>
                    </buttonLockup>
                    
                </row>
            </stack>
            <heroImg src="" />
        </banner>
        <shelf>
            <header>
                <title>Seasons</title>
            </header>
            <section>
                <lockup
                    onSelect=""
                    onSelectHold="modal"
                    >
                    <img src="" width="226" height="226" />
                    <title>Season</title>
                </lockup>
            </section>
        </shelf>
        <!-- Everything past this is below the fold -->
    </productTemplate>
</document>